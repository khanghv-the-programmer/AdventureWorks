@model List<AdventureWorksBeta.Models.Product>
@{
    ViewData["Title"] = "Products In " + ViewBag.NameSub;
}

<h1>Products In @ViewBag.NameSub</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            Product List
        </div>
        <div class="col-6">
            <a href="~/Product/CreateProduct">Add a product</a> 
        </div>

    </div>

    <br />
    <br />
    @{
        int currentPage = (int)ViewBag.CurrentPage;
        int totalPage = (int)ViewBag.TotalPage;
    }
    <h1>Page @(currentPage + 1)</h1>

    @if (Model.Count() > 0)
    {
        <ul>
            @foreach (AdventureWorksBeta.Models.Product p in Model)
            {
                <li style="display:inline">
                    <form action="~/Home/ProductDetail" style="display:inline">
                        <input type="hidden" name="pId" value="@p.ProductId" />
                        <button type="submit" class="btn-link" style="width: 22%; height:40%; text-align:center; margin: 5px; padding: 5px">
                            <img style="width: 50%" class="img-thumbnail" src=" @string.Format("data:image/jpeg;base64,{0}", Convert.ToBase64String(p.ProductProductPhoto.ElementAt(0).ProductPhoto.ThumbNailPhoto))" />
                            <h6 style="width: 100%">@p.Name</h6>

                            <p style="width: 100%">@p.ListPrice</p>

                        </button>

                    </form>
                </li>

            }
        </ul>
        if (currentPage != 0)
        {
            if (currentPage != 1)
            {
                <form action="~/Product/SearchProductByCategoryAndSubCategory" method="get" style="display:inline">
                    <input type="hidden" name="idSubString" value="@ViewBag.IdSub" />
                    <button type="submit" name="getPage" value="0">1</button>

                </form>
                if (currentPage != 2)
                {
                    <p style="display:inline">...</p>
                }

            }


            <form action="~/Product/SearchProductByCategoryAndSubCategory" method="get" style="display:inline">
                <input type="hidden" name="idSubString" value="@ViewBag.IdSub" />
                <button type="submit" name="getPage" value="@(currentPage - 1)">@currentPage</button>

            </form>
            <form action="~/Product/SearchProductByCategoryAndSubCategory" method="get" style="display:inline">
                <input type="hidden" name="idSubString" value="@ViewBag.IdSub" />
                <button type="submit" name="getPage" value="@(currentPage)" disabled>@(currentPage + 1)</button>

            </form>

        }
        else
        {
            <form action="~/Product/SearchProductByCategoryAndSubCategory" method="get" style="display:inline">
                <input type="hidden" name="idSubString" value="@ViewBag.IdSub"/>
                <button type="submit" name="getPage" value="@(currentPage)" disabled>@(currentPage + 1)</button>

            </form>
        }
        for (int i = currentPage + 1; i < currentPage + 5; i++)
        {
            int k = totalPage - currentPage;
            if (k >= 5)
            {
                <form action="~/Product/SearchProductByCategoryAndSubCategory" method="get" style="display:inline">
                    <input type="hidden" name="idSubString" value="@ViewBag.IdSub"/>
                    <button type="submit" name="getPage" value="@i">@(i + 1)</button>

                </form>


            }
            else
            {
                for (int j = 0; j < k; j++)
                {
                    if (i + j >= totalPage)
                    {
                        break;
                    }
                    <form action="~/Product/SearchProductByCategoryAndSubCategory" method="get" style="display:inline">
                        <input type="hidden" name="idSubString" value="@ViewBag.IdSub"/>
                        <button type="submit" name="getPage" value="@(i+j)">@(i + j + 1)</button>

                    </form>

                }
                break;
            }


        }

        if (currentPage + 5 < totalPage)
        {
            <p style="display:inline">...</p>
            <form action="~/Product/SearchProductByCategoryAndSubCategory" method="get" style="display:inline">
                <input type="hidden" name="idSubString" value="@ViewBag.IdSub" />
                <button type="submit" name="getPage" value="@(totalPage - 1)">@totalPage</button>
            </form>
        }



    }
    else
    {
        <h2>Nothing here!</h2>
    }

</div>
